/*
INICO DE LOS ESTILOS DEL LOGIN
******************************
 */

html,body{
    height: 100%;
}

.card{
    border: none;
}

.login-icon{
    display: block;
    width: 100%;
    max-width: 100px;
    margin: 0 auto;
}

.card-body h4{
    padding-bottom: 1.5rem;
    
}

.card-title{
    color: black;
}

.form-control{
    border-radius: 25px;
}

.form-control-login{
    border-radius: 25px;
    padding: 0.375rem;
}

.form-control-login:focus {
    color: #000;
    background-color: #fff;
    border-color: #7edbff33;
    outline: 0;
    box-shadow: 0 0 0 0.1rem rgba(0, 123, 255, 0.25);
}

.form-control-login::placeholder {
    color: #adadad;
    opacity: 1;
}

.text-muted{
    color: #fff !important;
}

.btn{
    border-radius: 25px;
    background-color: #09ade2;
    border-color: #09ade2;
}

p{
    margin: 1rem;
    text-align: center;
    color: black;
}

/*
FIN DE LOS ESTILOS DEL LOGIN
****************************
 */



